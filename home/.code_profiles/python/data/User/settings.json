    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-k>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        // Переход не на середину экрана а на 3 строки ниже верхнего края
        // {
        //     "before": [
        //         "z",
        //         "t"
        //     ],
        //     "after": [
        //         "z",
        //         "t",
        //         "3",
        //         "C-y"
        //     ]
        // },
        // Переключение между буферами
        {
            "before": [
                "<S-h>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        // Переключение между буферами
        {
            "before": [
                "<S-l>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        // При поиске центрировать результат
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "z",
                "z"
            ]
        },
        // При поиске центрировать результат
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "z",
                "z"
            ]
        },
        // Перемещаться посимвольно
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        // Показать боковую панеть с файловым деревом (toggle explorer)
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        },
        // Перемещаться посимвольно
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        // оставить только текущее окно, все остальные закрыть (close other)
        {
            "before": [
                "<leader>",
                "z",
            ],
            // "after": [
            //     "<C-w>",
            //     "o",
            // ],
            "commands": [
                "workbench.files.action.collapseExplorerFolders",
                "workbench.action.closeEditorsInOtherGroups",
                "workbench.action.closeOtherEditors",
                "git.closeAllDiffEditors",
            ]
        },
        // форматировать документ (format document)
        {
            "before": [
                "<leader>",
                "d",
                "f"
            ],
            "after": [
                "workbench.action.files.saveAll",
            ],
            "commands": [
                "editor.action.formatDocument",
                "ruff.executeAutofix",
                "ruff.executeFormat",
                "ruff.executeOrganizeImports",
                "workbench.action.files.saveAll",
            ]
        },
        // открыть определение вo всплывающем окне (go to definition)
        {
            "before": [
                "<leader>",
                "g",
                "d"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        // Найти упоминания в коде (на боковой панели) (go to references)
        {
            "before": [
                "<leader>",
                "g",
                "r"
            ],
            "commands": [
                "references-view.findReferences"
            ]
        },
        // Найти упоминания в коде (в поиске) (go to find in files)
        {
            "before": [
                "<leader>",
                "g",
                "f",
            ],
            "commands": [
                "editor.action.addSelectionToNextFindMatch",
                "workbench.action.findInFiles",
            ]
        },
        // Найти упоминания в коде (всплывающее окно) (go to usages)
        // потом перемещает строку с курсорок к верху окна и запоминает позицию
        // курсора в метке "b"
        {
            "before": [
                "<leader>",
                "g",
                "u"
            ],
            // "after": [
            //     "m",
            //     "b",
            //     "z",
            //     "t",
            //     "3",
            //     "C-y"
            // ],
            "commands": [
                "editor.action.goToReferences"
            ]
        },
        // Перейти к заголовку (go to header)
        {
            "before": [
                "<leader>",
                "g",
                "h"
            ],
            "commands": [
                "C_Cpp.SwitchHeaderSource"
            ]
        },
        // Показать боковую патель с git (toggle_git)
        {
            "before": [
                "<leader>",
                "t",
                "g"
            ],
            "commands": [
                "workbench.action.togglePanel",
                "workbench.view.scm",
                "workbench.action.closeAllGroups",
                "git-graph.view",
                "workbench.action.splitEditorDown"
            ]
        },
        // Показать боковую панеть со ссылками (toggle references)
        {
            "before": [
                "<leader>",
                "t",
                "r",
            ],
            "commands": [
                "references-view.tree.focus"
            ]
        },
        // Показать / скрыть боковую панель (toggle sidebar)
        {
            "before": [
                "<leader>",
                "t",
                "s",
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        // Показать / скрыть открытые редакторы (toggle open editors)
        {
            "before": [
                "<leader>",
                "t",
                "o",
            ],
            "commands": [
                "workbench.files.action.focusOpenEditorsView"
            ]
        },
        // Показать / скрыть хлебные крошки (toggle breadcrumbs)
        {
            "before": [
                "<space>"
            ],
            "commands": [
                // "workbench.action.toggleSidebarVisibility",
                "breadcrumbs.focusAndSelect"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                // "editor.action.formatDocument",
                // "eslint.executeAutofix",
                "workbench.action.files.saveAll",
            ]
        },
        // Перейти к предыдущей ошибке
        {
            "before": [
                "[",
                "e"
            ],
            "commands": [
                "editor.action.marker.prevInFiles"
            ]
        },
        // Перейти к следующей ошибке
        {
            "before": [
                "]",
                "e"
            ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        // Перейти к предыдущему изменению
        {
            "before": [
                "[",
                "c"
            ],
            "commands": [
                "workbench.action.editor.previousChange",
                "workbench.action.compareEditor.previousChange"
            ]
        },
        // Перейти к следующему изменению
        {
            "before": [
                "]",
                "c"
            ],
            "commands": [
                "workbench.action.editor.nextChange",
                "workbench.action.compareEditor.nextChange"
            ]
        },
        // Поиск EasyMotions
        {
            "before": [
                "s"
            ],
            "after": [
                "leader",
                "leader",
                "2",
                "s"
            ]
        },
        // Показать список файлов в этот группу
        {
            "before": [
                "<tab>"
            ],
            "commands": [
                "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
            ]
        },
        // Навигация назад по кодовой базе
        {
            "before": [
                "<C-h>"
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        // Навигация вперед по кодовой базе
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                "workbench.action.navigateForward"
            ]
        },

        // Vim: создать вертикальный сплит (vertical split)
        // {
        //     "before": [
        //         "<leader>",
        //         "v",
        //     ],
        //     "commands": [
        //         "workbench.action.splitEditorRight"
        //     ],
        // },
        // Навигация между сплитами в стиле Vim
        // {
        //     "before": [
        //         "<C-h>"
        //     ],
        //     "commands": [
        //         "workbench.action.navigateLeft"
        //     ]
        // },
        // {
        //     "before": [
        //         "<C-l>"
        //     ],
        //     "commands": [
        //         "workbench.action.navigateRight"
        //     ]
        // },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Ctrl + D - выделить слово под курсором "editor.action.addSelectionToNextFindMatch"
        // Найти упоминания в коде (в поиске) (go to find in files)
        {
            "before": [
